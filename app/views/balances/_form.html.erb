<%= form_with(model: balance) do |form| %>
  <% if balance.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(balance.errors.count, "error") %> prohibited this balance from being saved:</h2>

      <ul>
        <% balance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :creator_id, "Creator", style: "display: block"  %>
    <%= form.collection_select :creator_id, User.all, :id, :username, prompt: "Select a creator" %>
  </div>

  <div>
    <%= form.label :participant_ids, "Participants", style: "display: block" %>
    <%= form.collection_check_boxes :participant_ids, User.all, :id, :username %>
  </div>

  <div>
    <%= form.label :description, "Description", style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :creation_date, "Date", style: "display: block" %>
    <%= form.datetime_field :creation_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
